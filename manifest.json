{

  "manifest_version": 2,
  "name": "Imager",
  "version": "0.1",

  "description": "Allows to open bigger image on site",

  "icons": {
  	"16": "icons/border-16.png",
  	"32": "icons/border-32.png",
  	"48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*","*://*.phoronix.com/*","*://*.wykop.pl/*"],
      "js": ["imager.js", "popup.js"]
    }
  ],
  
  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/beasts-32.png",
    "default_title": "Beastify",
    "default_popup": "popup/choose_beast.html",
    
    "default_title": "Butotn",
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    "beasts/frog.jpg",
    "beasts/turtle.jpg",
    "beasts/snake.jpg"
  ]
}

